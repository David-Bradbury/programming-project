@model Login

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="p-5">

    <h1 class="display-4 text-center">Login</h1>

    <form asp-action="ForgotPassword" class="col-md-6 g-5 mx-auto">
        <div class="form-group row mt-3">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email" data-val="true"
                   data-val-required="The Email field is required." />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
            <p class="text-center my-3">Please enter the email address for the account to recover password</p>
        <div class="form-group row mt-3">
            <input type="submit" value="ForgotPassword" class="btn btn-primary btn-block col-8 mx-auto" />
        </div>
    </form>
</div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }