@model EditProfileViewModel
@{
    ViewData["Title"] = "EditProfile";
}

<h1 class="display-4">Edit Profile</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProfile">

            <input asp-for=Email type="hidden" />
            <input asp-for=SelectedField type="hidden" />
            <input asp-for=UserType type="hidden" />

            @if (Model.SelectedField.Equals(nameof(Model.FirstName)))
            {
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <div class="form-group">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <input asp-for=LastName type="hidden" />
                    <input asp-for=StreetAddress type="hidden" />
                    <input asp-for=SuburbName type="hidden" />
                    <input asp-for=Postcode type="hidden" />
                    <input asp-for=State type="hidden" />
                    <input asp-for=Country type="hidden" />
                    <input asp-for=PhNumber type="hidden" />
                    <input asp-for=IsInsured type="hidden" />
                    <input asp-for=ExperienceLevel type="hidden" />
                    <input asp-for=Password type="hidden" />
                    <input asp-for=ConfirmPassword type="hidden" />
                </div>

            }
            @if (Model.SelectedField.Equals(nameof(Model.LastName)))
            {
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <div class="form-group">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

            @*        <input asp-for=FirstName type="hidden" />
                    <input asp-for=StreetAddress type="hidden" />
                    <input asp-for=SuburbName type="hidden" />
                    <input asp-for=Postcode type="hidden" />
                    <input asp-for=State type="hidden" />
                    <input asp-for=Country type="hidden" />
                    <input asp-for=PhNumber type="hidden" />
                    <input asp-for=IsInsured type="hidden" />
                    <input asp-for=ExperienceLevel type="hidden" />
                    <input asp-for=Password type="hidden" />
                    <input asp-for=ConfirmPassword type="hidden" />*@
                </div>

            }
            @if (Model.SelectedField.Equals(nameof(Model.StreetAddress)))
            {
                <div class="form-group">
                    <label asp-for="StreetAddress" class="control-label"></label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=SuburbName type="hidden" />
                <input asp-for=Postcode type="hidden" />
                <input asp-for=State type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=PhNumber type="hidden" />
                <input asp-for=IsInsured type="hidden" />
                <input asp-for=ExperienceLevel type="hidden" />
                <input asp-for=Password type="hidden" />
                <input asp-for=ConfirmPassword type="hidden" />

            }
            @if (Model.SelectedField.Equals(nameof(Model.SuburbName)))
            {
                <div class="form-group">
                    <label asp-for="SuburbName" class="control-label"></label>
                    <input asp-for="SuburbName" class="form-control" />
                    <span asp-validation-for="SuburbName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Postcode" class="control-label"></label>
                    <input asp-for="Postcode" class="form-control" />
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=StreetAddress type="hidden" />
                <input asp-for=State type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=PhNumber type="hidden" />
                <input asp-for=IsInsured type="hidden" />
                <input asp-for=ExperienceLevel type="hidden" />
                <input asp-for=Password type="hidden" />
                <input asp-for=ConfirmPassword type="hidden" />

            }

            @if (Model.SelectedField.Equals(nameof(Model.State)))
            {
                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <select class="form-select" asp-items="Model.StatesList" asp-for="State">
                        <option value="" hidden>-- Please Select A State --</option>
                    </select>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=StreetAddress type="hidden" />
                <input asp-for=SuburbName type="hidden" />
                <input asp-for=Postcode type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=PhNumber type="hidden" />
                <input asp-for=IsInsured type="hidden" />
                <input asp-for=ExperienceLevel type="hidden" />
                <input asp-for=Password type="hidden" />
                <input asp-for=ConfirmPassword type="hidden" />

            }
            @if (Model.SelectedField.Equals(nameof(Model.PhNumber)))
            {
                <div class="form-group">
                    <label asp-for="PhNumber" class="control-label"></label>
                    <input asp-for="PhNumber" class="form-control" />
                    <span asp-validation-for="PhNumber" class="text-danger"></span>
                </div>
                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=StreetAddress type="hidden" />
                <input asp-for=SuburbName type="hidden" />
                <input asp-for=Postcode type="hidden" />
                <input asp-for=State type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=IsInsured type="hidden" />
                <input asp-for=ExperienceLevel type="hidden" />
                <input asp-for=Password type="hidden" />
                <input asp-for=ConfirmPassword type="hidden" />

            }
            @if (Model.SelectedField.Equals(nameof(Model.IsInsured)))
            {
                <!-- <div class="form-group">
                      <label asp-for="IsInsured" class="control-label"></label>
                      <input asp-for="IsInsured" class="form-control" />
                      <span asp-validation-for="IsInsured" class="text-danger"></span>
                  </div>-->


                <div class="form-group mt-3">
                    <label asp-for="IsInsured" class="control-label"></label>
                    <select class="form-select" asp-items="Model.IsInsuredList" asp-for="IsInsured">
                        <option value="" hidden>-- Please Select --</option>
                    </select>
                    <span asp-validation-for="IsInsured" class="text-danger"></span>
                </div>
                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=StreetAddress type="hidden" />
                <input asp-for=SuburbName type="hidden" />
                <input asp-for=Postcode type="hidden" />
                <input asp-for=State type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=PhNumber type="hidden" />
                <input asp-for=ExperienceLevel type="hidden" />
                <input asp-for=Password type="hidden" />
                <input asp-for=ConfirmPassword type="hidden" />

            }
            @if (Model.SelectedField.Equals(nameof(Model.ExperienceLevel)))
            {
                <!-- <div class="form-group">
                     <label asp-for="ExperienceLevel" class="control-label"></label>
                     <input asp-for="ExperienceLevel" class="form-control" />
                     <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                 </div>-->

                <div class="form-group mt-3">
                    <label asp-for="ExperienceLevel" class="control-label"></label>
                    <select class="form-select" asp-items="Model.ExperienceList" asp-for="ExperienceLevel">
                        <option value="" hidden>-- Please Select --</option>
                    </select>
                    <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                </div>

                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=StreetAddress type="hidden" />
                <input asp-for=SuburbName type="hidden" />
                <input asp-for=Postcode type="hidden" />
                <input asp-for=State type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=PhNumber type="hidden" />
                <input asp-for=IsInsured type="hidden" />
                <input asp-for=Password type="hidden" />
                <input asp-for=ConfirmPassword type="hidden" />

            }
            @if (Model.SelectedField.Equals(nameof(Model.Password)))
            {
                <div class="form-group">
                    <label for="Password" class="control-label">Password</label>
                    <input id="Password" name="Password" type="password"
                       class="form-control" data-val="true"
                       data-val-required="The Password field is required." />
                    @Html.ValidationMessage("Password", new  { @class = "text-danger"})
                </div>

                <div class="form-group">
                    <label for="ConfirmPassword" class="control-label">Confirm Password</label>
                    <input id="ConfirmPassword" name="ConfirmPassword" type="password"
                       class="form-control" data-val="true"
                       data-val-required="The Password field is required." />
                    @Html.ValidationMessage("confirmPassword", new  { @class = "text-danger"})
                </div>
                <input asp-for=FirstName type="hidden" />
                <input asp-for=LastName type="hidden" />
                <input asp-for=StreetAddress type="hidden" />
                <input asp-for=SuburbName type="hidden" />
                <input asp-for=Postcode type="hidden" />
                <input asp-for=State type="hidden" />
                <input asp-for=Country type="hidden" />
                <input asp-for=PhNumber type="hidden" />
                <input asp-for=IsInsured type="hidden" />
                <input asp-for=ExperienceLevel type="hidden" />

            }


            <div class="form-group" style="padding-top: 15px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Profile</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }