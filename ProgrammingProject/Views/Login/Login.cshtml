@model Login

@{
    ViewData["Title"] = "Login";
}

<div class="p-5">

<h1 class="display-4 text-center">Login</h1>

<form asp-action="Login" class="col-md-6 g-5 mx-auto">
    <div class="form-group row mt-3">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter Email" data-val="true"
            data-val-required="The Email field is required." />
        <span asp-validation-for="Email" class="text-danger"></span>

    </div>
    <div class="form-group row mt-3">
        <label for="Password" class="control-label">Password</label>
        <input id="Password" name="Password" type="password" placeholder="Enter Password" class="form-control"
            data-val="true" data-val-required="The Password field is required." />
        @Html.ValidationMessage("Password", new { @class = "text-danger"})
    </div>

    <div class="form-group row mt-3">
        <input type="submit" value="Login" class="btn btn-primary btn-block col-8 mx-auto" />
    </div>
    <p class="text-center">OR</p>
    <div class="form-group row mt-3">
        <a class="btn btn-primary btn-block col-8 mx-auto" asp-route="selectAccount">Create Account</a>
    </div>
    @Html.ValidationMessage("LoginFailure", new {@class = ""})
</form>
</div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}